%h3 Uue dokumendi lisamine

= form_for(@document, url: catalog_documents_url(@current_catalog, @document), html: {class: "form-horizontal"}) do |f|
  .form-group
    = f.label :doc_type, "Dokumendi tüüp: ", class: "col-sm-3 control-label"
    .col-sm-5
      = f.grouped_collection_select :doc_type, @document_types, :doc_types, :type_name, :doc_type, :type_name, {}, class: "form-control"
