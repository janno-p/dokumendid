%h3 Uue dokumendi lisamine

= form_for(@document, url: catalog_documents_url(@current_catalog, @document), html: {class: "form-horizontal"}) do |f|
  .form-group
    = f.label :doc_type, "Tüüp: ", class: "col-sm-2 control-label"
    .col-sm-5
      = f.grouped_collection_select :doc_type, @document_types, :doc_types, :type_name, :doc_type, :type_name, {}, class: "form-control"
  .form-group
    = f.label :name, "Nimetus: ", class: "col-sm-2 control-label"
    .col-sm-5
      = f.text_field :name, class: "form-control"
  .form-group
    = f.label :description, "Kirjeldus: ", class: "col-sm-2 control-label"
    .col-sm-5
      = f.text_field :description, class: "form-control"
  %h3
    %small Dokumendi atribuudid

