  .form-group
    = label_tag :username, "Kasutajanimi: ", class: "col-sm-3 control-label"
    .col-sm-5
      = text_field_tag :username, @username, class: "form-control"
  .form-group
    = label_tag :password, "Salas√µna: ", class: "col-sm-3 control-label"
    .col-sm-5
